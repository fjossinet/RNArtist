            <!--&lt;!&ndash;final jar in /target/distribution &ndash;&gt;
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.1.2</version>
                <configuration>
                    <outputDirectory>${project.build.directory}/RNArtist/lib</outputDirectory>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>${main.class}</mainClass>
                            <useUniqueVersions>false</useUniqueVersions>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            &lt;!&ndash; copy of runtime dependencies &ndash;&gt;
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/RNArtist/lib</outputDirectory>
                            <includeScope>runtime</includeScope>
                            <excludeTransitive>false</excludeTransitive>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            &lt;!&ndash; copy of additional files in /target/RNArtist  &ndash;&gt;
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <copy todir="${project.build.directory}/RNArtist/">
                                    <fileset dir="${project.basedir}/RNArtist/"/>
                                </copy>
                                <chmod dir="${project.build.directory}/RNArtist" perm="ugo+rx" includes="*.sh"/>
                                <chmod dir="${project.build.directory}/RNArtist" perm="ugo+rx" includes="*.command"/>
                                <chmod dir="${project.build.directory}/RNArtist" perm="ugo+rx" includes="*.ps1"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            &lt;!&ndash; to package app &ndash;&gt;
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>package-osx</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${java.home}/bin/jpackage</executable>
                            <arguments>
                                <argument>&#45;&#45;type</argument>
                                <argument>dmg</argument>
                                <argument>&#45;&#45;icon</argument>
                                <argument>${project.basedir}/src/main/resources/io/github/fjossinet/rnartist/io/images/icon.icns</argument>
                                <argument>&#45;&#45;name</argument>
                                <argument>RNArtist</argument>
                                <argument>&#45;&#45;main-jar</argument>
                                <argument>rnartist-1.0.jar</argument>
                                <argument>&#45;&#45;input</argument>
                                <argument>${project.basedir}/target/RNArtist/lib/</argument>
                                <argument>&#45;&#45;module-path</argument>
                                <argument>${project.basedir}/target/RNArtist/lib/</argument>
                                <argument>&#45;&#45;add-modules</argument>
                                <argument>javafx.controls,javafx.swing</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>package-windows</id>
                        &lt;!&ndash;will need the installation of the wix toolset (https://wixtoolset.org/)&ndash;&gt;
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>jpackage.exe</executable>
                            <arguments>
                                <argument>&#45;&#45;verbose</argument>
                                <argument>&#45;&#45;type</argument>
                                <argument>msi</argument>
                                <argument>&#45;&#45;name</argument>
                                <argument>RNArtist</argument>
                                <argument>&#45;&#45;main-jar</argument>
                                <argument>rnartist-1.0.jar</argument>
                                <argument>&#45;&#45;input</argument>
                                <argument>${project.basedir}/target/RNArtist/lib/</argument>
                                <argument>&#45;&#45;module-path</argument>
                                <argument>${project.basedir}/target/RNArtist/lib/</argument>
                                <argument>&#45;&#45;add-modules</argument>
                                <argument>javafx.controls,javafx.swing</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>package-linux</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${java.home}/bin/jpackage</executable>
                            <arguments>
                                <argument>&#45;&#45;type</argument>
                                <argument>deb</argument>
                                <argument>&#45;&#45;icon</argument>
                                <argument>${project.basedir}/src/main/resources/io/github/fjossinet/rnartist/io/images/icon.png</argument>
                                <argument>&#45;&#45;name</argument>
                                <argument>RNArtist</argument>
                                <argument>&#45;&#45;main-jar</argument>
                                <argument>rnartist-1.0.jar</argument>
                                <argument>&#45;&#45;input</argument>
                                <argument>${project.basedir}/target/RNArtist/lib/</argument>
                                <argument>&#45;&#45;module-path</argument>
                                <argument>${project.basedir}/target/RNArtist/lib/</argument>
                                <argument>&#45;&#45;add-modules</argument>
                                <argument>javafx.controls,javafx.swing</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            &lt;!&ndash; to run RNArtist &ndash;&gt;
