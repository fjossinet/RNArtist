<project name="RNArtist" default="compile" basedir=".">

    <target name="clean">
        <delete dir="RNArtist/lib/"/>
        <mkdir dir="RNArtist/lib/"/>
    </target>

    <condition property="isWindows">
        <os family="windows" />
    </condition>

    <condition property="isUnix">
        <os family="unix" />
    </condition>

    <condition property="isMac">
        <os family="mac" />
    </condition>

    <target name="copyjars" depends="clean, javafxMac, javafxUnix, javafxWindows">
        <copy todir="RNArtist/lib/">
            <fileset dir="out/artifacts/rnartist_jar" includes="*.jar"/>
        </copy>
    </target>

    <target name="javafxMac" if="isMac">
        <copy todir="RNArtist/lib/">
            <fileset dir="lib/javafx/osx" includes="*.jar"/>
            <fileset dir="lib/javafx/osx" includes="*.dylib"/>
        </copy>
    </target>

    <target name="javafxUnix"  if="isUnix">
        <copy todir="RNArtist/lib/">
            <fileset dir="lib/javafx/linux" includes="*.jar"/>
            <fileset dir="lib/javafx/linux" includes="*.so"/>
        </copy>
    </target>

    <target name="javafxWindows"  if="isWindows">
        <copy todir="RNArtist/lib/">
            <fileset dir="lib/javafx/windows" includes="*.jar"/>
            <fileset dir="lib/javafx/windows" includes="*.dll"/>
        </copy>
    </target>

</project>